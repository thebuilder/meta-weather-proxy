{
  "name": "meta-weather",
  "version": 2,
  "public": false,
  "builds": [
    { "src": "api/*.ts", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/static/(.+)",
      "dest": "https://www.metaweather.com/static/$1",
      "headers": {
        "cache-control": "public,max-age=31536000"
      }
    },
    {
      "src": "/api/location/([^.?]*)",
      "dest": "/api/location.ts?endpoint=$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "cache-control":"s-maxage=600,stale-while-revalidate"
      }
    }
  ]
}